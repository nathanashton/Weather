<UserControl x:Class="Weather.UserControls.Charts.Test"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Weather.UserControls.Charts"
             mc:Ignorable="d"
             xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel LastChildFill="True" Margin="5">
        <DockPanel DockPanel.Dock="Top">
            <Label Content="Sensor" DockPanel.Dock="Left"></Label>
            <ComboBox HorizontalContentAlignment="Right" HorizontalAlignment="Right" Margin="5,0,5,0" DockPanel.Dock="Top" Height="30" ItemsSource="{Binding Sensors}" Style="{DynamicResource ComboBoxTransparent}"/>

        </DockPanel>
        <syncfusion:SfChart AreaBorderBrush="Transparent" BorderThickness="0" BorderBrush="Transparent">
            <syncfusion:PieSeries BorderBrush="Transparent" BorderThickness="0"  XBindingPath="Demand"  Background="Transparent"
                 ItemsSource="{Binding Demands}"
                  YBindingPath="Year2010" />
        </syncfusion:SfChart>
    </DockPanel>
</UserControl>