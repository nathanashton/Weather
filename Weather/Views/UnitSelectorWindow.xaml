<Window x:Class="Weather.Views.UnitSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather.Views" ResizeMode="NoResize"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" SizeToContent="Height"
        Title="Select Unit" Height="124.432" Width="238.636">
    <DockPanel>
        <DockPanel Background="#F0F0F0" HorizontalAlignment="Stretch" DockPanel.Dock="Bottom">
            <Button Margin="5" HorizontalAlignment="Right" DockPanel.Dock="Right" Height="23" Width="60" Content="Cancel" />
            <Button Command="{Binding AddCommand}" Margin="5" HorizontalAlignment="Right" DockPanel.Dock="Right" Height="23" Width="60" Content="Add" />
        </DockPanel>
        <ComboBox Margin="15" Height="23" ItemsSource="{Binding Units}" SelectedItem="{Binding SelectedUnit}"/>
    </DockPanel>
</Window>
