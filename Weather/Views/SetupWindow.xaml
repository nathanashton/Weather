<Window x:Class="Weather.Views.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:Weather.UserControls"
        mc:Ignorable="d" Background="#F8F8F8" WindowStartupLocation="CenterScreen"
        Title="Setup" Height="372" Width="430">

    <DockPanel>
        <DockPanel Background="#F0F0F0" HorizontalAlignment="Stretch" DockPanel.Dock="Bottom">
            <Button Margin="5" HorizontalAlignment="Right" DockPanel.Dock="Right" Height="23" Width="60"
                    Content="Close" Click="Button_Click" />
        </DockPanel>
        <TabControl>
            <TabItem Header="Sensor Types">
                <userControls:SensorTypesPage />
            </TabItem>
            <TabItem Header="Units">
                <userControls:UnitsPage />
            </TabItem>
        </TabControl>
    </DockPanel>

</Window>