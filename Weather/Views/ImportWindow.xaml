<Window x:Class="Weather.Views.ImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather.Views"
        mc:Ignorable="d"
        Title="ImportWindow" Height="300" Width="300">
    <DockPanel>
        <Button Content="Choose File" DockPanel.Dock="Top" Click="Button_Click"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Margin="10" Grid.Column="0">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <Button Content="Prev" Click="Button_Click_1"/>
                    <Button Content="Next" Click="Button_Click_2"/>
                    <Label Content="{Binding CurrentRecordDisplay}"/>
                </StackPanel>
                <ListBox BorderThickness="1" ItemsSource="{Binding SelectedStation.Sensors}" BorderBrush="Black" />
            </DockPanel>


            <DockPanel Margin="10" Grid.Column="2">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Content="Prev" Click="Button_Click_1"/>
                <Button Content="Next" Click="Button_Click_2"/>
                <Label Content="{Binding CurrentRecordDisplay}"/>
            </StackPanel>
            <ListBox BorderThickness="1" BorderBrush="Black" Name="lb" />
        </DockPanel>
            
            
        </Grid>
    </DockPanel>
</Window>
